/[if lt IE 8]
  = javascript_include_tag "css3-mediaqueries.js"
/[if lt IE 9]
  = javascript_include_tag "html5shiv-printshiv"
- if ['color_schemes'].include?(params[:controller])
  = javascript_include_tag "colorpicker.js"
= javascript_include_tag "application"
- if ["home","feed"].include?(controller_name)
  = javascript_include_tag "endless_scrolling_activity.js"
- elsif ["ideas"].include?(controller_name) and action_name.include?("show")
  = javascript_include_tag "endless_scrolling_activity_idea_show.js"
